{
  "name": "nest-template-base",
  "version": "1.0.0",
  "author": "hedaodao",
  "scripts": {
    "build": "nest build",
    "start:dev": "cross-env NODE_ENV=dev nest start --watch",
    "start:qa": "pnpm build && pm2 start ecosystem.config.cjs --env qa",
    "start:prod": "pnpm build && pm2 start ecosystem.config.cjs --env prod",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "typeorm-cli": "typeorm-ts-node-esm -d src/common/configs/orm-cli.config.ts",
    "migration:generate": "npm run typeorm-cli migration:generate ./migrations/alert-table",
    "migration:run": "npm run typeorm-cli migration:run",
    "migration:revert": "npm run typeorm-cli migration:revert",
    "compodoc": "compodoc -p tsconfig.json -s -o",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.ts": [
      "pnpm lint"
    ]
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/mapped-types": "*",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/schedule": "^4.1.0",
    "@nestjs/swagger": "^7.4.0",
    "@nestjs/typeorm": "^10.0.2",
    "@types/http-proxy": "^1.17.14",
    "@types/multer": "^1.4.11",
    "@types/uuid": "^9.0.8",
    "chalk": "4",
    "compressing": "^1.10.1",
    "cross-env": "^7.0.3",
    "dayjs": "^1.11.11",
    "http-proxy": "^1.18.1",
    "http-proxy-middleware": "^3.0.0",
    "i": "^0.3.7",
    "ioredis": "^5.4.1",
    "md5": "^2.3.0",
    "mysql2": "^3.10.1",
    "npm": "^10.8.1",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.20",
    "uuid": "^9.0.1",
    "winston": "^3.13.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@compodoc/compodoc": "^1.1.25",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/md5": "^2.3.5",
    "@types/node": "^20.3.1",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.0",
    "jest": "^29.5.0",
    "lint-staged": "^15.2.7",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
